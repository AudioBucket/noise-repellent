@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix pprops: <http://lv2plug.in/ns/ext/port-props#>.
@prefix ue: <http://lv2plug.in/ns/extensions/units#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix param: <http://lv2plug.in/ns/ext/parameters#>.
@prefix pg: <http://lv2plug.in/ns/ext/port-groups#>.

<https://github.com/lucianodato/noise-repellent>
  a lv2:Plugin;
  a lv2:SpectralPlugin;
  a lv2:UtilityPlugin;

  lv2:binary <nrepel.so>;
  doap:name "noise-repellent";
  doap:maintainer [
     foaf:name "Luciano Dato";
     foaf:homepage <https://github.com/lucianodato/noise-repellent>;
     foaf:mbox <mailto:lucianodato@gmail.com>;
  ];

  doap:license <https://opensource.org/licenses/LGPL-3.0>;
  lv2:optionalFeature pprops:supportsStrictBounds ;
  lv2:optionalFeature lv2:hardRTCapable ;

  lv2:port [
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 0;
    lv2:symbol "input";
    lv2:name "Input";
  ],

  [
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 1;
    lv2:symbol "output";
    lv2:name "Output";
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 2;
    lv2:symbol "capture";
    lv2:name "Capture noise" ,
			 "Capturar ruido"@es ;
    lv2:portProperty pprops:hasStrictBounds ;
    lv2:minimum 0.0 ;
    lv2:maximum 2.0 ;
    lv2:default 0.0 ;
    lv2:portProperty lv2:enumeration ;
    lv2:scalePoint [
    	rdfs:label "Noise capture bypass" ,
					"Captura de ruido apagada"@es ;
		rdf:value 0.0 ;
		] , [
		rdfs:label "Manual noise capture on" ,
					"Captura manual de ruido encendida"@es ;
		rdf:value 1.0 ;
		] , [
		rdfs:label "Auto noise capture" ,
					"Captura automatica de ruido"@es ;
		rdf:value 2.0 ;
		]
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 3;
    lv2:symbol "amountreduc";
    lv2:name "Amount of reduction" ,
			"Cantidad de reduccion"@es ;
    lv2:portProperty pprops:hasStrictBounds ;
    lv2:minimum 0.0 ;
    lv2:maximum 20.0 ;
    lv2:default 0.0 ;
    units:unit units:db ;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 4;
    lv2:symbol "windowtype";
    lv2:name "Window Type" ,
      "Tipo de Ventana"@es ;
    lv2:portProperty pprops:hasStrictBounds ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
    lv2:default 0.0 ;
    lv2:portProperty lv2:enumeration ;
    lv2:scalePoint [
      rdfs:label "Hanning";
		  rdf:value 0.0 ;
		] , [
		  rdfs:label "Blackman";
		    rdf:value 1.0 ;
		]
  ],

  [
    a lv2:OutputPort;
    a lv2:ControlPort;
    lv2:index 5;
    lv2:symbol "latency";
    lv2:name "Latency";
    lv2:portProperty lv2:reportsLatency;
    lv2:portProperty lv2:connectionOptional;
  ];
